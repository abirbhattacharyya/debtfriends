<%= content_tag(:h1, " Sign in or up with your business email to start collecting (<a href='/images/sign_in_why_link.jpg' target='_blank'>Why?</a>)") %>

<%= error_messages_for(:user, :order => [:email, :crypted_password], :message => "", :header_message => "")%>

<% form_tag create_biz_path,:id=>"session_form" do  %>
  <p class="ctrl">
      <%= label_tag(:email, "My Email") %>
      <%= text_field :user, :email, :class => "w180px" %>
      <%= hidden_field_tag :submit_type,0 %>
  </p>
  <p class="ctrl">
      <p><%= label_tag 'password' %>
		 <%= password_field :user,:crypted_password,:maxlength=>16,:size=>26, :class => "w180px" %></p>
		<em>Min. 8 characters not case sensitive.</em>
  </p>
  <p class="ctrl actions">
      <span class="button green"><%= submit_tag("Go!") %></span>
      <div class="forgot_pass" style="margin-top:-41px;margin-left:79px;"><%= link_to "Forgot Password?","javascript:;" %> </div>
  </p>
<% end %>

  <script>
     jQuery(function() {
        jQuery(".forgot_pass").click(function(){
          jQuery("#submit_type").val(1);
          jQuery("#session_form").submit();
          });
      });
    </script>